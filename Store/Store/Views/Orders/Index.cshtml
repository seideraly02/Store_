@model List<Order>

@{
    ViewBag.Title = "Список заказов";
    Layout = "_Layout";
}

<h2>Список заказов</h2>
@if (Model.Count == 0)
{
    <p>Список пуст</p>
}
else
{

    <table class="table">
        <tbody>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Адрес доставки</th>
            <th>Номер телефона</th>
            <th>Продук</th>
            <th>Действие</th>
        </tr>


        @foreach (var order in Model)
        {

            <tr>
                <th>@order.Id</th>
                <td>@order.Name</td>
                <td>@order.Address</td>
                <td>@order.PhoneNumber</td>
                <td>@order.Product.Name</td>
                <td style="text-align: center">
                    <a asp-action="Remove" asp-controller="Orders" asp-route-orderId="@order.Id">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
}